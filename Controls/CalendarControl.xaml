<UserControl x:Class="MiniCalendar.Controls.CalendarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MiniCalendar.Controls"
             xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="420" d:DesignWidth="300"
             x:Name="CalendarUserControl"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">
    <UserControl.Resources>
        <Geometry x:Key="PrevMonthArrow">M 8,0 L 0,8 L 8,16</Geometry>
        <Geometry x:Key="NextMonthArrow">M 0,0 L 8,8 L 0,16</Geometry>

        <Style x:Key="MonthNavigationButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{Binding ElementName=MonthYearText, Path=Foreground}"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="0">
                            <Path Data="{TemplateBinding Content}" 
                                  Stroke="{TemplateBinding Foreground}" 
                                  StrokeThickness="1"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  StrokeLineJoin="Round"
                                  Fill="Transparent"
                                  Stretch="Uniform" 
                                  Width="10"
                                  Height="16"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{Binding ElementName=CalendarUserControl, Path=HoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CalendarDayButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="0" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=HoverBackground}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Border x:Name="MainBorder" 
            Background="#202020" 
            CornerRadius="0" 
            BorderThickness="1"
            BorderBrush="#40FFFFFF"
            MouseWheel="Border_MouseWheel">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 月份导航 -->
            <Grid x:Name="MonthNavGrid" Grid.Row="0" Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button x:Name="PreviousMonthButton" 
                        Grid.Column="0" 
                        Content="{StaticResource PrevMonthArrow}" 
                        Style="{StaticResource MonthNavigationButtonStyle}"
                        VerticalAlignment="Center"
                        Margin="10,0"/>
                
                <TextBlock x:Name="MonthYearText" 
                          Grid.Column="1" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          FontSize="24" 
                          FontWeight="Normal"
                          Foreground="White"/>
                
                <Button x:Name="NextMonthButton" 
                        Grid.Column="2" 
                        Content="{StaticResource NextMonthArrow}" 
                        Style="{StaticResource MonthNavigationButtonStyle}"
                        VerticalAlignment="Center"
                        Margin="10,0"/>
            </Grid>
            
            <!-- 星期标题 -->
             <UniformGrid x:Name="WeekHeaderGrid" Grid.Row="1" Columns="7" Height="30" Margin="10,0">
                 <TextBlock Text="一" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{Binding ElementName=MonthYearText, Path=Foreground}" FontWeight="SemiBold"/>
                 <TextBlock Text="二" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{Binding ElementName=MonthYearText, Path=Foreground}" FontWeight="SemiBold"/>
                 <TextBlock Text="三" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{Binding ElementName=MonthYearText, Path=Foreground}" FontWeight="SemiBold"/>
                 <TextBlock Text="四" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{Binding ElementName=MonthYearText, Path=Foreground}" FontWeight="SemiBold"/>
                 <TextBlock Text="五" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{Binding ElementName=MonthYearText, Path=Foreground}" FontWeight="SemiBold"/>
                 <TextBlock Text="六" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{Binding ElementName=MonthYearText, Path=Foreground}" FontWeight="SemiBold"/>
                 <TextBlock Text="日" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{Binding ElementName=MonthYearText, Path=Foreground}" FontWeight="SemiBold"/>
             </UniformGrid>
             
             <!-- 日历网格 -->
             <Grid x:Name="CalendarGrid" Grid.Row="2" Margin="10,5,10,10">
                 <!-- 行列定义将由代码动态生成 -->
             </Grid>
        </Grid>
    </Border>
</UserControl>